{
  "name": "lightspeed",
  "version": "1.0.0",
  "description": "A modern generative art creation tool - Create beautiful algorithmic compositions with intuitive preset controls",
  "type": "module",
  "main": "./src/index.js",
  "license": "MIT",
  "author": {
    "name": "Lightspeed Team"
  },
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@texel/color": "^1.1.3",
    "canvas-sketch-util": "^1.10.0",
    "pako": "^2.1.0"
  },
  "scripts": {
    "zip": "cd www && zip -r ../upload.zip ./ -x '.*' -x '__MACOSX'",
    "palette": "node tools/generate-palette.js > src/palette.js && prettier --write src/palette.js",
    "dev": "esbuild test/onchain.js --serve --bundle --minify --format=iife --outfile=www/script.js --servedir=www",
    "dev:palette": "esbuild test/vis-palette.js --sourcemap=inline --serve --bundle --minify --format=iife --outfile=www/script.js --servedir=www",
    "dev:animate": "esbuild test/animate.js --sourcemap=inline --serve --bundle --minify --format=iife --outfile=www/script.js --servedir=www",
    "build": "esbuild test/onchain.js --bundle --minify --format=iife | terser --comments=false --compress --output www/script.js -- && wc -c < www/script.js",
    "vercel-build": "npm run build && cp -r www/* ."
  },
  "keywords": [
    "lightspeed",
    "generative-art",
    "algorithmic",
    "composition",
    "art-creation",
    "visual-art",
    "canvas",
    "javascript",
    "creative-coding"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/lightspeed-art/lightspeed.git"
  },
  "homepage": "https://lightspeed.art",
  "bugs": {
    "url": "https://github.com/lightspeed-art/lightspeed/issues"
  },
  "devDependencies": {
    "canvas": "^2.11.2",
    "canvas-dimensions": "^1.0.0",
    "canvas-sketch": "^0.7.7",
    "convert-length": "^1.0.1",
    "esbuild": "^0.23.1",
    "gifenc": "^1.0.3",
    "png-tools": "^1.0.4",
    "prettier": "^3.3.3",
    "serve": "^14.2.3",
    "skia-canvas": "^2.0.0",
    "tape": "^5.9.0",
    "terser": "^5.32.0",
    "vite": "^6.0.2"
  }
}
